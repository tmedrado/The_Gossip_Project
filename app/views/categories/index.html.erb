<div class="container">
  <div>
  <h1>Categories</h1>
  </div>
<br>
  <table class="table">
    <thead>
      <tr>
        <td>ID</td>
        <td>Name</td>
        <td>Actions</td>
      </tr>
    </thead>
    <tbody>
    <% Category.all.each do |category| %>
    <tr>
      <td><%= category.id%></td>
      <td><%= category.name%></td>
      <td>
        <a href="<%= edit_category_path(category.id)%>" class="btn btn-primary">Edit </a>
        <a href="<%= category_path(category.id) %>" class="btn btn-danger" data-confirm="Are you sure?" data-method="delete">Delete</a>
      </td>
    </tr>
    <% end %>
    </tbody>

  </table>

  <p>
    <a href="<%= new_category_path%>" class="btn btn-success">Create category</a>
  </p>

</div>
<h1>Edit your Gossip</h1>

<div class="container">
  <%= form_for @gossip do |f| %>
    <div class ="form-group">
      <label>Gossip's title</label>
      <%= f.text_field :title, class: 'form-control' %>
    </div>
    <div class ="form-group">
      <label>Gossip's Content</label>
      <%= f.text_area :content, class: 'form-control' %>
    </div>
    <div class ="form-group">
      <button type="submit" class="btn btn-primary">Modify your Gossip</button>
    </div>
  <% end %>
</div>